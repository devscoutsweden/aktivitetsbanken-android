<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_margin="@dimen/sideMargin"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchWidgetButton"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_action_search"
        style="@style/ImageButton" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchWidgetText"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="@dimen/uiBlockSize" />
</FrameLayout>