<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/quickSearchListItemTitle"
        android:textStyle="bold"
        android:textSize="@dimen/mediumTextSize"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/quickSearchListItemImage"
        android:layout_alignTop="@+id/quickSearchListItemImage"
        android:textColor="@color/basicVeryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/quickSearchListItemSubtitle"
        android:textColor="@color/basicDark"
        android:paddingTop="0pt"
        android:paddingBottom="@dimen/sideMargin"
        android:textSize="@dimen/smallTextSize"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/quickSearchListItemTitle"
        android:layout_below="@+id/quickSearchListItemTitle" />

    <se.devscout.android.view.AsyncThumbnailImageView
        android:layout_width="@dimen/iconButtonSize"
        android:layout_height="@dimen/iconButtonSize"
        android:layout_margin="@dimen/sideMargin"
        android:id="@+id/quickSearchListItemImage"
        android:src="@drawable/launcher"
        android:baselineAlignBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>