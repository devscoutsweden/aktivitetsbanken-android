<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.devscout.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:label="@string/app_name"
        android:icon="@drawable/launcher"
        android:logo="@drawable/action_bar"
        android:theme="@style/DevScout">
        <activity android:name=".controller.activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".controller.activity.ActivitiesActivity"></activity>
        <activity android:name=".controller.activity.SearchResultActivity"></activity>
        <activity android:name=".controller.activity.FragmentCreatorActivity"></activity>
        <activity android:name=".controller.activity.SettingsActivity"></activity>
        <activity android:name=".controller.activity.GalleryThumbnailsActivity" android:theme="@style/PhotoGallery"></activity>
        <activity android:name=".controller.activity.GalleryFullscreenActivity" android:theme="@style/PhotoGallery"></activity>
        <activity android:name=".controller.activity.UserProfileActivity"></activity>
        <activity android:name=".util.auth.GoogleAuthenticationActivity"></activity>
    </application>
</manifest>
