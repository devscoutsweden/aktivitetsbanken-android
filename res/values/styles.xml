<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DevScout" parent="Theme.Devscout">
        <item name="android:windowBackground">@color/basicVeryLight</item>
        <item name="android:colorBackground">@color/basicVeryLight</item>
        <item name="android:textColor">@color/basicVeryDark</item>
    </style>


    <style name="ImageOverlay">
        <!--<item name="android:alpha">0.6</item>-->
        <item name="android:background">#afff</item>
        <item name="android:textColor">#f000</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/uiBlockSize</item>
        <item name="android:layout_height">@dimen/uiBlockSize</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
    </style>

    <style name="ImageOverlay_ImageButton" parent="ImageOverlay">
        <item name="android:layout_width">@dimen/uiBlockSize</item>
        <item name="android:layout_height">@dimen/uiBlockSize</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
    </style>

    <style name="ImageOverlay_SingleTextLine" parent="ImageOverlay">
        <item name="android:minHeight">@dimen/uiBlockSize</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PhotoGallery_Thumbnail">
        <item name="android:layout_width">@android:dimen/thumbnail_width</item>
        <item name="android:layout_height">@android:dimen/thumbnail_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Document_TextItem">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
        <item name="android:background">@color/basicVeryLight</item>
        <item name="android:textColor">@color/basicVeryDark</item>
    </style>

    <style name="Document_Header" parent="Document_TextItem">
        <item name="android:textSize">@dimen/extraLargeTextSize</item>
        <item name="android:paddingTop">@dimen/smallTextSize</item>
        <!--<item name="android:textColor">@color/accentBlue</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Document_Paragraph" parent="Document_TextItem">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ToggleTest" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">@dimen/uiBlockSize</item>
    </style>

    <style name="VerticalCheckbox">
        <item name="android:layout_width">@dimen/iconButtonSize</item>
        <item name="android:layout_marginLeft">@dimen/iconButtonMargin</item>
        <item name="android:layout_marginRight">@dimen/iconButtonMargin</item>
    </style>

    <style name="VerticalCheckbox.Top">
        <item name="android:layout_height">@dimen/iconButtonSize</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/iconButtonMargin</item>
    </style>

    <style name="VerticalCheckbox.Bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="VerticalRadiobutton" parent="VerticalCheckbox"></style>

    <style name="VerticalRadiobutton.Top">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="VerticalRadiobutton.Bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>