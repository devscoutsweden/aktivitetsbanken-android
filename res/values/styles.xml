<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DevScout" parent="Theme.Devscout">
        <item name="android:windowBackground">@color/basicVeryLight</item>
        <item name="android:colorBackground">@color/basicVeryLight</item>
        <item name="android:textColor">@color/basicVeryDark</item>
        <item name="color">@color/basicVeryDark</item>
    </style>


    <style name="ImageOverlay">
        <!--<item name="android:alpha">0.6</item>-->
        <item name="android:background">#afff</item>
        <item name="android:textColor">#f000</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/uiBlockSize</item>
        <item name="android:layout_height">@dimen/uiBlockSize</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
    </style>

    <style name="ImageOverlay_ImageButton" parent="ImageOverlay">
        <item name="android:layout_width">@dimen/uiBlockSize</item>
        <item name="android:layout_height">@dimen/uiBlockSize</item>
        <item name="android:padding">@dimen/iconButtonMargin</item>
    </style>

    <style name="ImageOverlay_SingleTextLine" parent="ImageOverlay">
        <item name="android:minHeight">@dimen/uiBlockSize</item>
        <!--<item name="android:paddingTop">@dimen/mediumTextSize</item>-->
        <item name="android:paddingTop">@dimen/iconButtonMargin</item>
        <item name="android:paddingRight">@dimen/iconButtonMargin</item>
        <item name="android:paddingBottom">@dimen/iconButtonMargin</item>
        <item name="android:paddingLeft">@dimen/iconButtonMargin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/extraLargeTextSize</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#ffff</item>
        <!--<item name="android:background">#5000</item>-->
        <!--<item name="android:textColor">@color/basicVeryLight</item>-->
        <item name="android:background">@drawable/gradient_label_background</item>
        <item name="android:layout_height">@dimen/uiBlockSizeLarge</item>
    </style>

    <style name="PhotoGallery">
        <item name="android:textColor">@color/basicLight</item>
        <item name="color">@color/basicLight</item>
        <item name="android:background">@color/basicVeryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="PhotoGallery_Thumbnail" parent="PhotoGallery">
        <item name="android:layout_width">@android:dimen/thumbnail_width</item>
        <item name="android:layout_height">@android:dimen/thumbnail_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SimpleDocument">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/defaultMargin</item>
        <item name="android:background">@color/basicVeryLight</item>
        <item name="android:textColor">@color/basicVeryDark</item>
        <item name="android:lineSpacingExtra">@dimen/Document_Paragraph_LineSpacingExtra</item>
    </style>

    <style name="ToggleTest" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">@dimen/uiBlockSize</item>
    </style>

    <style name="VerticalCheckbox">
        <item name="android:layout_width">@dimen/iconButtonSize</item>
        <item name="android:layout_marginLeft">@dimen/iconButtonMargin</item>
        <item name="android:layout_marginRight">@dimen/iconButtonMargin</item>
    </style>

    <style name="VerticalCheckbox.Top">
        <item name="android:layout_height">@dimen/iconButtonSize</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/iconButtonMargin</item>
    </style>

    <style name="VerticalCheckbox.Bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="VerticalRadiobutton" parent="VerticalCheckbox"></style>

    <style name="VerticalRadiobutton.Top">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="VerticalRadiobutton.Bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/iconButtonMargin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ExpandCollapseToggleButton">
        <item name="android:button">@drawable/expand_collapse_toggle_button</item>
        <item name="android:paddingLeft">@dimen/iconButtonSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accentBlue</item>
    </style>

    <style name="ActivityRatingBar" parent="@android:style/Widget.RatingBar">>
        <item name="android:progressDrawable">@drawable/activity_rating_bar</item>
        <item name="android:minHeight">@dimen/uiBlockSize</item>
        <item name="android:maxHeight">@dimen/uiBlockSize</item>
    </style>
</resources>