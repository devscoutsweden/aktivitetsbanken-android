<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="@dimen/largeTextSize"
        android:text="5-15 min"
        android:id="@+id/activitiesListItemTime"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_action_time"
        android:gravity="center_vertical"
        android:textSize="@dimen/smallTextSize"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/activitiesListItemTitle"
        android:textStyle="bold"
        android:textSize="@dimen/mediumTextSize"
        android:padding="@dimen/defaultMargin"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/activitiesListItemTime"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/activitiesListItemSubtitle"
        android:textColor="@android:color/secondary_text_light"
        android:paddingLeft="@dimen/defaultMargin"
        android:paddingRight="@dimen/defaultMargin"
        android:paddingBottom="@dimen/defaultMargin"
        android:paddingTop="0dp"
        android:textSize="@dimen/smallTextSize"
        android:layout_below="@id/activitiesListItemTitle"
        android:layout_alignRight="@id/activitiesListItemTitle"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:singleLine="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="@dimen/largeTextSize"
        android:text="8-16"
        android:id="@+id/activitiesListItemParticipants"
        android:drawableLeft="@drawable/ic_action_cc_bcc"
        android:gravity="center_vertical"
        android:layout_below="@id/activitiesListItemTime"
        android:textSize="@dimen/smallTextSize"
        android:layout_alignParentRight="true" />

</RelativeLayout>