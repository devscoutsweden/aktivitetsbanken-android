<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/textColumnWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_progress_logging_out"
            android:id="@+id/authProgressHeader"
            android:textSize="@dimen/mediumTextSize"
            android:padding="@dimen/defaultMargin"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_progress_google_revokation"
            android:id="@+id/authProgressMessage"
            android:padding="@dimen/defaultMargin"
            android:textSize="@dimen/smallTextSize"
            android:gravity="center" />

    </LinearLayout>
</FrameLayout>