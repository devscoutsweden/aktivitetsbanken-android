<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:devscout="http://schemas.android.com/apk/res/se.devscout.android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- A series of dots when a lot of (untitled) pages are shown. -->
    <se.devscout.android.view.ViewPagerIndicator
        android:layout_width="wrap_content"
        android:layout_height="@dimen/iconButtonMargin"
        android:id="@+id/viewPagerIndicator"
        android:layout_weight="0"
        android:layout_margin="@dimen/iconButtonMargin"
        devscout:color="@color/basicVeryDark"
        devscout:paddingDots="@dimen/microTextSize"
        devscout:count="10"
        devscout:selectedIndex="1"
        android:focusableInTouchMode="true" />

    <!-- Tabs similar to those of Google Play (see http://developer.android.com/samples/SlidingTabsBasic/index.html) -->
    <com.example.android.common.view.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>